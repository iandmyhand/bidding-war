{{> layouts/header }}

<form class="container" method="post" action="/item/create">
    <div class="mb-3">
        <label class="form-label">제품 명</label>
        <input name="productName" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label class="form-label">제목</label>
        <input name="title" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label class="form-label">내용</label>
        <input name="content" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label class="form-label">최소 입찰 가격</label>
        <input name="price" type="number" class="form-control">
    </div>

    <div class="mb-3">
        <label class="form-label">자동 낙찰 예정 시간</label>
        <input name="bidTime" type="datetime-local" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">등록</button>
</form>


{{> layouts/footer }}